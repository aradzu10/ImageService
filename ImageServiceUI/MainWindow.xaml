<Window x:Class="ImageServiceUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageServiceUI"
        mc:Ignorable="d"
        Title="Image Service User Interface" Height="450" Width="800">
    <Grid>
        <TabControl MouseDoubleClick="TabControl_MouseDoubleClick">
            <TabItem Header="Settings" Margin="0,0,-4,0"/>
            <TabItem Header="Log" Width="59">
                <Grid Background="#FFE5E5E5" Margin="0,33,0,0">
                    <DataGrid x:Name="LogGrid" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Type" Width="70" IsReadOnly="True" CanUserResize="False"/>
                            <DataGridTemplateColumn Header="Message" Width="*"  IsReadOnly="True">
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
